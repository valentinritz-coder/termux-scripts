---
http://mitm.it
su
ls /data/data/com.termux/files/home/.mitmproxy
---
openssl x509 -inform PEM -subject_hash_old -in mitmproxy-ca-cert.pem | head -1
--

cp mitmproxy-ca-cert.pem /system/etc/security/cacerts/abcd1234.0
chmod 644 /system/etc/security/cacerts/abcd1234.0
reboot
